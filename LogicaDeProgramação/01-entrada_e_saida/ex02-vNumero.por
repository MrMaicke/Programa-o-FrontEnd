programa {
//Função inicial para execultar o programa

  funcao inicio() {

    //declaração com o nome da variavel
    inteiro vNumero

    //exibe uma mensagem para o usuario
    escreva("Digite um número inteiro: ")

    //armazena o valor digitado anterior
    leia(vNumero)

    //mostra o resultado para o usuario
    escreva("O número digitado é................: ", vNumero)
  }
}